{
  "map_enabled": true,
  "auto_unpin_on_clear": true,
  "disabled_image_filter": "grayscale, dim",
  "chest_unopened_img": "images/BasicChestClosed.png",
  "chest_opened_img": "images/BasicChestOpen.png",
  "layouts": {
    "shared_item_grid": {
      "type": "array",
      "orientation": "vertical",
      "content": [
        {
          "type": "itemgrid",
          "h_alignment": "center",
          "item_margin": "0,0,4,15",
          "rows": [ 
            [ "telescope", "sail", "windwaker", "grapple", "spoils", "boomerang", "leaf", "bombs", "sword" ],
            [ "tuner", "pic1", "boots", "armor", "baitbag", "bow", "elementals", "lightarrow", "shield" ],
            [ "bottle", "magletter", "moeletter", "momletter", "delivery", "hookshot", "hammer", "wallet", "power" ],
            [ "deed", "requiem", "ballad", "command", "lyric", "aria", "passing", "gschart" ],
          ]
        }
      ]
    },
    "tracker_default": {
      "type": "container",
      "background": "#877373",
      "content": {
        "type": "dock",
        "dropshadow": true,
        "content": [
          {
            "type": "dock",
            "dock": "left",
            "v_alignment": "stretch",
            "content": [
              {
                "type": "group",
                "header": "Items",
                "dock": "top",
                "content": {
                  "type": "layout",
                  "key": "shared_item_grid"
                }
              },
              {
                "type": "group",
                "header": "Pinned Locations",
                "content": {
                  "type": "recentpins",
                  "style": "wrap",
                  "h_alignment": "stretch",
                  "v_alignment": "stretch",
                  "orientation": "vertical",
                  "compact": true
                }
              }
            ]
          },
          {
            "type": "map"
          }
        ]
      }
    },
    "tracker_horizontal": {
      "type": "container",
      "background": "#877373",
      "content": {
        "type": "dock",
        "dropshadow": true,
        "content": [
          {
            "type": "dock",
            "dock": "bottom",
            "content": [
              {
                "type": "group",
                "header": "Items",
                "margin": "0,0,3,0",
                "dock": "left",
                "content": {
                  "type": "layout",
                  "key": "shared_item_grid"
                }
              },
              {
                "type": "group",
                "header": "Pinned Locations",
                "content": {
                  "type": "recentpins",
                  "style": "wrap",
                  "h_alignment": "stretch",
                  "v_alignment": "stretch",
                  "orientation": "horizontal",
                  "compact": true
                }
              }
            ]
          },
          {
            "type": "map"
          }
        ]
      }
    }
  }
}
